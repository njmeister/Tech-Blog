<div class="post-card">
  <div class="post-head">
    <h2>{{post.title}}</h2>
    <h3>{{post.user.username}}</h3>
  </div>
  <div class="post-body">
    <p>{{post.body}}</p>
  </div>
  <div class="post-date">
    <p>{{format_date post.date}}</p>
  </div>
</div>

<div>
    <form class="new-comment-form">
            <textarea id="body"></textarea>
            <button type="submit" id="submit-new-post">Comment</button>
    </form>


</div>

<script src="/js/postHandler.js"></script>