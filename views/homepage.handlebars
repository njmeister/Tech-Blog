{{#each posts as |post| }}
<div class="post-card">
  <a href="/post/{{post.id}}">
    <div class="post-head">
      <h2>{{post.title}}</h2>
      <h3>{{post.user.username}}</h3>
    </div>
    <div class="post-body">
      <p>{{post.body}}</p>
    </div>
    <div class="post-date">
      <p>{{format_date post.date}}</p>
    </div>
  </a>
</div>
{{/each}}
